# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[Makefile]
indent_style = tab
indent_size = 8

[*.md]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false

[*.{c,cpp,h}]
indent_style = space
indent_size = 2

[*.dart]
indent_style = space
indent_size = 2

[*.go]
indent_style = tab
indent_size = 8

[*.py]
indent_style = space
indent_size = 4

[*.rb]
indent_style = space
indent_size = 2

[*.rs]
indent_style = space
indent_size = 4

[*.zig]
indent_style = space
indent_size = 4
